# Environment variables for RLG Engine

# Application
APP_NAME=RLG Engine
DEBUG=true

# Ollama LLM (local - no API key needed!)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# Retrieval Weights (should sum to 1.0)
BM25_WEIGHT=0.3
DENSE_WEIGHT=0.5
STRUCTURAL_WEIGHT=0.2

# Grounding Settings
MIN_GROUNDING_CONFIDENCE=0.7
REQUIRE_EXACT_CITATION=true
MAX_GENERATION_TOKENS=1024

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval
TOP_K_RETRIEVAL=20
TOP_K_RERANK=5
